<h1>Messaggi</h1>

@model List<Message>

@if (Model.Count() == 0)
{
    <h3 class="text-center">Non sono presenti messaggi.</h3>
}
else
{
    //card messaggio
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Title</th>
                <th>Text</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Message message in Model)
            {
                <tr>
                    <td class="email">
                        @message.Email
                    </td>
                    <td class="username">
                        @message.UserName
                    </td>
                    <td class="title">
                        @message.Title
                    </td>
                    <td class="text">
                        @message.Text
                    </td>
                </tr>
            }
        </tbody>
    </table>
}